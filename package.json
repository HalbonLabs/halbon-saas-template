{
  "name": "halbon-saas-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:strict": "eslint . --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "typecheck:strict": "tsc --noEmit -p tsconfig.strictest.json",
    "prebuild": "prisma generate",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "postinstall": "prisma generate",
    "test": "vitest run",
    "test:ci": "vitest run --reporter=dot --coverage=false",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "bundle-size": "cross-env ANALYZE=true next build && node scripts/bundle-analyzer.cjs"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^15.4.6",
    "@prisma/client": "6.16.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "next": "15.5.4",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "tailwind-merge": "^2.5.5",
    "zod": "4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "9.37.0",
    "@next/eslint-plugin-next": "15.5.4",
    "@playwright/test": "^1.49.1",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-links": "^8.4.7",
    "@storybook/blocks": "^8.4.7",
    "@storybook/nextjs": "^8.4.7",
    "@storybook/react": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "22.18.8",
    "@types/react": "19.2.0",
    "@types/react-dom": "19.2.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitest/coverage-v8": "3.2.4",
    "cross-env": "^10.0.0",
    "eslint": "9.37.0",
    "eslint-config-next": "15.5.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-storybook": "^9.0.0",
    "globals": "^16.0.0",
    "gzip-size": "^7.0.0",
    "happy-dom": "18.0.1",
    "mkdirp": "^3.0.1",
    "prettier": "3.6.2",
    "prisma": "6.16.3",
    "storybook": "^8.4.7",
    "typed-query-selector": "^2.12.0",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  },
  "pnpm": {
    "overrides": {
      "@types/json5": "2.2.0",
      "json5": "2.2.3"
    }
  }
}
